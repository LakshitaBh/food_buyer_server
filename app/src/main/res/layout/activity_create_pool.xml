<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F2F1"
    tools:context="com.example.nitantsood.buyer_serverapplication.CreatePoolActivity">

    <EditText
        android:id="@+id/newPoolName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:hint="Name of Pool"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/newPoolTimestamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Click Button to choose Date and Time"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/newPoolName"
        app:layout_constraintRight_toLeftOf="@+id/newPoolTimestampButton"
        app:layout_constraintTop_toBottomOf="@+id/newPoolName" />

    <ImageButton
        android:id="@+id/newPoolTimestampButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:padding="5dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/newPoolTimestamp"
        app:layout_constraintRight_toRightOf="@+id/newPoolName"
        app:layout_constraintTop_toTopOf="@+id/newPoolTimestamp"
        app:srcCompat="@android:drawable/ic_dialog_dialer" />

    <EditText
        android:id="@+id/newPoolLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Click Button for Location"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/newPoolTimestamp"
        app:layout_constraintRight_toLeftOf="@+id/newPoolLocationButton"
        app:layout_constraintTop_toBottomOf="@+id/newPoolTimestamp" />

    <ImageButton
        android:id="@+id/newPoolLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/newPoolLocation"
        app:layout_constraintRight_toRightOf="@+id/newPoolTimestampButton"
        app:layout_constraintTop_toTopOf="@+id/newPoolLocation"
        app:layout_constraintVertical_bias="0.47"
        app:srcCompat="@android:drawable/ic_dialog_map" />

    <Button
        android:id="@+id/creatPoolButton"
        android:layout_width="0dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:text="Create Pool"
        android:onClick="loginButtonClicked"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/newPoolLocation"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.36" />
</android.support.constraint.ConstraintLayout>
